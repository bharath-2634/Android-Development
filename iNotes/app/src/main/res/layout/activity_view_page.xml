<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotesViewPage"
    android:background="#F3F3F3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:overScrollMode="always">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/viewPageToolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/viewPageBackBtn"
                    android:src="@drawable/ic_back"
                    android:scaleType="center"
                    android:backgroundTint="@color/black"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:id="@+id/viewPageTitleCard"
                    android:fontFamily="@font/style_5"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text=" Notes Title "
                    android:maxLines="1"
                    android:maxWidth="200dp"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_marginTop="16dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/viewPageShareBtn"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/ic_share"
                    android:scaleType="center"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <ImageView
                    android:id="@+id/viewPageTagBtn"
                    android:layout_margin="5dp"
                    android:src="@drawable/not_pin"
                    android:scaleType="center"
                    android:backgroundTint="@color/black"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewPageToolBar"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/viewPageDateTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/bold"
                android:text="Notes Date"
                android:textColor="@color/text_color"
                android:textSize="18dp" />
            <androidx.cardview.widget.CardView
                android:id="@+id/viewPageNotesCard"
                android:layout_below="@+id/viewPageDateTxt"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#EBECF0">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:backgroundTint="#EBECF0">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="5dp">
                        <EditText
                            android:id="@+id/viewPageNotesTitle"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/style_5"
                            android:textSize="18dp"
                            android:text="Notes Title"
                            android:background="@android:color/transparent"
                            android:singleLine="false"
                            android:outlineProvider="none"
                            android:textAlignment="center"/>

                    </LinearLayout>
                    <EditText
                        android:id="@+id/viewPageNotes"
                        android:background="@android:color/transparent"
                        android:textSize="18dp"
                        android:fontFamily="@font/style_13"
                        android:textColor="@color/text_color"
                        android:text="Notes Content"
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/viewPageSaveBtn"
                android:layout_below="@+id/viewPageNotesCard"

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_view"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:text="Save Note's"/>
        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>